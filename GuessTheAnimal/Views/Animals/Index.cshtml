@model IEnumerable<GuessTheAnimal.Animal>

@{
    ViewBag.Title = "Index";
}

<h2>List of Animals</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
    </tr>
}
    <tr>
        <td>Choose an animal in your head and click button below for the system to guess...<br />
            <input type="button" class="btn btn-info" value="Lets Guess!" onclick="location.href='@Url.Action("question", "AnimalDetails")'" /></td>

    </tr>

</table>
