@model GuessTheAnimal.AnimalDetail


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")



}


@{
    ViewBag.Title = "Questions";
}

<h2>Guess the Animal</h2>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    if (Model != null)
    {
        <table class="table">
            
            <tr>
                <td>
                    <p>Does the animal @Html.DisplayFor(model => model.Facts)</p> 
                    
                    @Html.RadioButtonFor(model => model.SelectedAnswer, "Yes") Yes
                    @Html.RadioButtonFor(model => model.SelectedAnswer, "No") No
                    @Html.ValidationMessageFor(model => model.SelectedAnswer, "", new { @class = "text-danger" })
                </td>
                @*<td>
                    @Html.DisplayFor(model => model.Animal.Name)
                </td>*@

            </tr>
          
            <tr>
                <td>
                    <input type="submit" value="Next" class="btn btn-default"  />
                </td>
            </tr>          

        </table>
        @Html.HiddenFor(model => model.AnimalId)
        @Html.HiddenFor(model => model.FactId)
    }
    <table class="table">
        <tr>
            <td>
                @{
                    if (ViewData["EndGuess"] != null && (bool)ViewData["EndGuess"] == true)
                    {
                        if (ViewData["AnimalFound"] != null)
                        {
                            if ((bool)ViewData["AnimalFound"] == false)
                            {
                                <label>Animal not found, try again</label>
                            }
                            else
                            {
                                if (ViewData["AnimalName"] != null)
                                {
                                    <div><label>The Animal is, @ViewData["AnimalName"].ToString() </label></div>
                                }
                            }
                        }


                    }


                }


            </td>
        </tr>
      

    </table>
  
    
                    }
